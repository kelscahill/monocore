{% if page_header and post.hide_page_title != 'yes' %}
  <div class="c-page-header{{ page_header.classes ? ' ' ~ page_header.classes }} l-container">
    <div class="c-page-header__container l-container--md u-spacing">
      {% include "@atoms/text/kicker/kicker.twig" with {
        "kicker": {
          "text": page_header.kicker,
          "classes": "c-page-header__kicker"
        }
      } %}
      {% include "@atoms/text/heading/heading.twig" with {
        "heading": {
          "level": "1",
          "size": "xxl",
          "text": page_header.title,
          "classes": "c-page-header__heading js-gsap-split-words"
        }
      } %}
      {% include "@atoms/text/dek/dek.twig" with {
        "dek": {
          "text": page_header.dek,
          "classes": "c-page-header__dek"
        }
      } %}
    </div>
  </div>
{% endif %}